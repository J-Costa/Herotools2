<h2>Lista alugueis:</h2>
<hr>
<a href="/admin/aluguel/add"><button class="btn btn-success">Novo aluguel</button></a>

{{#each aluguel}}
    <div class="card mt-4">
        <div class="card-body mt-2">
            <h4 >{{idFerramenta.ferramenta}}</h4>
            <small>Modelo: {{idFerramenta.modelo}} </small>
            <br>
            <small>Nome cliente: {{idCliente.nome}}</small>
            <br>
            <small>Data retirada: {{dateFormat dataRetirada}}</small>
            <br>
            <small>Data devolução: {{dateFormat dataDevolucao}}</small>
            <br>
            <a href="/admin/aluguel/edit/{{_id}}"><div class="btn btn-success mt-4">Editar aluguel</div></a>
            <br>
            <form action="/admin/aluguel/deletar" method="POST" >
                <input type="hidden" name="id" value="{{_id}}">
                <input type="hidden" name="ferramenta" value="{{idFerramenta.ferramenta}}">
                <button class="btn btn-danger mt-2">Deletar aluguel</button>
            </form>
        </div>
    </div>
{{else}}

{{/each}}