<h3>Editar usuário:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/usuarios/edit" method="POST">
            <input type="hidden" name="id" value="{{usuario._id}}"> 
            <label for="tipo">Tipo de usuário:</label>
            <input type="text" id="tipo" name="tipo" placeholder="Tipo de usuário" class="form-control" value="{{usuario.tipo}}">

            <label for="senha">Senha:</label>
            <input type="password" id="senha" name="senha" placeholder="senha" class="form-control" >

            <label for="senha2">Repita a senha:</label>
            <input type="password" id="senha2" name="senha2" placeholder="Repita a senha" class="form-control" >

            <label for="email">E-mail:</label>
            <input type="email" id="email" name="email" placeholder="email@email.com" class="form-control" value="{{usuario.email}}"> 

            <label for="nome">Nome do usuário: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome do usuário " class="form-control" value="{{usuario.nome}}">

            <label for="sexo"> Sexo: </label>
            <select name="sexo" id="sexo" class="form-control">
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
            </select>

            <label for="rg">RG:</label>
            <input type="number" name="rg" id="rg" placeholder="RG" class="form-control" value="{{usuario.rg}}">

            <label for="cpf">CPF:</label>
            <input type="number" id="cpf" name="cpf" placeholder="CPF" class="form-control" value="{{usuario.cpf}}">

            <label for="cep">CEP:</label>
            <input type="number" id="cep" name="cep" placeholder="cep" class="form-control" value="{{usuario.cep}}">

            <label for="endereco">Endereço:</label>
            <input type="text" id="endereco" name="endereco" placeholder="Endereço" class="form-control" value="{{usuario.endereco}}">

            <label for="bairro">Bairro:</label>
            <input type="text" id="bairro" name="bairro" placeholder="Bairro" class="form-control" value="{{usuario.bairro}}">

            <label for="telefone">Telefone:</label>
            <input type="number" id="telefone" name="telefone" placeholder="(xx) xxxx-xxxx" class="form-control" value="{{usuario.telefone}}">

            <label for="celular">Celular:</label>
            <input type="number" id="celular" name="celular" placeholder="(xx) xxxxx-xxxx" class="form-control" value="{{usuario.celular}}">
            <br>
            <button type="submit" class="btn btn-success">Editar usuário</button >
        </form>
    </div>
</div>