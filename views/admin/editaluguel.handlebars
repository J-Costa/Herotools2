<h3>Editar aluguel:</h3>
<div class="card">
    <div class="card-body">
       <form action="/admin/aluguel/edit" method="POST">
       <input type="hidden" name="id" value="{{aluguels._id}}"> 
              <label for="ferramenta"> Usuario:</label>
            <select name="usuario" class='custom-select'>
                {{#each usuarios}}
                    <option value="{{_id}}" >{{nome}}</option>
                {{else}}
                    <option value="">Nenhum usuário localizado!</option>
                {{/each}}
            </select> 

            <label for="ferramenta"> Ferramenta</label>
            <select name="ferramenta" class='custom-select'>
                {{#each ferramentas}}
                    <option value="{{_id}}" >{{modelo}}</option>
                {{else}}
                    <option value="">Nenhuma ferramenta localizada!</option>
                {{/each}}
            </select> 

            <label for="dataRetirada">Data de retirada: </label>
            <input type="datetime" id="dataRetirada" name="dataRetirada" placeholder="xx/xx/xxxx" class="form-control" value="{{dateFormat aluguels.dataRetirada}}">

            <label for="dataDevolucao"> 
                Data de devolução: 
            </label>

            <input type="datetime" name="dataDevolucao" id="dataDevolucao" placeholder="xx/xx/xxxx" class="form-control" value="{{dateFormat aluguels.dataDevolucao}}">
            <br>
            <button type="submit" class="btn btn-success">Editar aluguel</button>
        </form>
    </div>
</div>